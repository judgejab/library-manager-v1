extends ../layout

block content
  h1 New Loan
  |     
  form(action="/loans/new", method="post")
    include errors
    p
      label(for='book_id') Book
        span.fa.fa-chevron-down.first
      select#book_id(name="book_id")
        each book in books
          option(value=book.id) 
            =book.title
    |         
    p
      label(for='patron_id') Patron
        span.fa.fa-chevron-down.second
      select#patron_id(name="patron_id")
        each patron in patrons
          option(value=patron.id)
            =patron.first_name
            | 
            =patron.last_name
    |         
    p
      label(for='loaned_on') Loaned on:
      input#loaned_on.datepicker(type='text', value=today name="loaned_on")
      //- input#loaned_on(type='text', value='Sun May 22 2016 17:00:00 GMT-0700 (PDT)')
    |         
    p
      label(for='return_by') Return by:
      input#return_by.datepicker(type='text', value=due name="return_by")
      //- input#return_by(type='text', value='Sun May 29 2016 17:00:00 GMT-0700 (PDT)')
    |         
    p
      input(type='submit', value='Create New Loan')